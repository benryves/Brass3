; ==================================================================================================
; SHIP.INC - Simple ship-moving stuff
; ==================================================================================================



#define Min_X	0
#define Max_X	96-8
#define Min_Y	5
#define Max_Y	64-8

; ==================================================================================================
; Y Moving
; ==================================================================================================

Move_Down:
	ld a,(Ship_Y)
	inc a
	cp Max_Y+1
	ret z
	jr Fix_Y
Move_Up:
	ld a,(Ship_Y)
	dec a
	cp Min_Y-1
	ret z
Fix_Y:
	ld (Ship_Y),a
	ret

; ==================================================================================================
; X Moving
; ==================================================================================================

Move_Right:
	ld a,(Ship_X)
	inc a
	cp Max_X+1
	ret z
	jr Fix_X
Move_Left:
	ld a,(Ship_X)
	dec a
	cp Min_X-1
	ret z
Fix_X:
	ld (Ship_X),a
	ret